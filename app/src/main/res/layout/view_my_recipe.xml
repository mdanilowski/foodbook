<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="2dp"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/primary"
    app:cardCornerRadius="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="4dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:weightSum="6">

            <TextView
                android:id="@+id/tvFoodName"
                android:layout_width="0dp"
                android:layout_gravity="center"
                tools:text="Tortilla z kurczakiem"
                android:textColor="@color/white_100"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_weight="4" />

            <LinearLayout
                android:layout_width="0dp"
                android:gravity="end"
                android:layout_gravity="end"
                android:layout_height="wrap_content"
                android:layout_weight="2">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="2dp"
                    android:src="@mipmap/ic_like_border" />

                <TextView
                    android:id="@+id/tvLikesCount"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/white_100" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:padding="2dp"
                    android:src="@mipmap/ic_comment" />

                <TextView
                    android:id="@+id/tvCommentCount"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/white_100" />
            </LinearLayout>
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="8dp"
            android:layout_height="150dp">
            <ImageView
                android:id="@+id/ivFoodImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:src="@drawable/foodbackgroungplaceholder"/>
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/tvRecipeTags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:padding="2dp"
            android:textColor="@color/white_98"
            android:gravity="center"
            tools:text="tortilla, kurczak, papryka, ryÅ¼"/>
    </LinearLayout>

